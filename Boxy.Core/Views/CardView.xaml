<UserControl
    x:Class="Boxy.Views.CardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Boxy.ViewModels"
    Width="{Binding Width, FallbackValue=240}"
    Height="{Binding Height, FallbackValue=346}"
    d:DataContext="{d:DesignInstance Type=viewModels:CardViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel
            Margin="1"
            DockPanel.Dock="Bottom">
            <TextBox
                Width="24"
                Margin="1"
                VerticalContentAlignment="Center"
                Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Center" />
            <ComboBox
                Margin="1"
                DisplayMemberPath="SetName"
                ItemsSource="{Binding AllPrintings}"
                SelectedItem="{Binding SelectedPrinting}" />
        </DockPanel>
        <Image
            SnapsToDevicePixels="False"
            Source="{Binding CardImage}"
            UseLayoutRounding="False" />
    </DockPanel>
</UserControl>
