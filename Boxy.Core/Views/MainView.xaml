<Window
    x:Class="Boxy.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Boxy.Views.Resources"
    Title="{Binding SoftwareVersion, StringFormat='{}Boxy v{0}'}"
    Width="800"
    Height="450"
    MinWidth="640"
    MinHeight="480"
    d:DesignHeight="900"
    d:DesignWidth="1700"
    Background="#ececec"
    DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainVm}"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary
            Source="pack://application:,,,/Views/Resources/Main.xaml" />
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Border
                Height="30"
                Background="{StaticResource BackgroundXDark}"
                DockPanel.Dock="Bottom">
                <DockPanel>
                    <Border
                        Margin="2"
                        BorderBrush="White"
                        BorderThickness="1,0,0,0"
                        DockPanel.Dock="Right">
                        <Border
                            BorderBrush="Black"
                            BorderThickness="1,0,0,0">
                            <DockPanel
                                Margin="10,0">
                                <Button
                                    Margin="5,0,0,0"
                                    Padding="0,-3,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding UpdateCatalog}"
                                    DockPanel.Dock="Right">
                                    <Button.Style>
                                        <Style
                                            BasedOn="{StaticResource ButtonTransparentNoHighlightStyle}"
                                            TargetType="{x:Type Button}">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Path
                                                        Data="{StaticResource RefreshPathData}"
                                                        Fill="{StaticResource BackgroundXxLight}" />
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <Path
                                                                Data="{StaticResource RefreshPathData}"
                                                                Fill="{StaticResource ThemeLight}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <Path
                                                                Data="{StaticResource RefreshPathData}"
                                                                Fill="{StaticResource ThemePop}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <Path
                                                                Data="{StaticResource RefreshPathData}"
                                                                Fill="{StaticResource ControlMid}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Foreground="White"
                                    Text="Card Catalog Updated: " />
                                <TextBlock
                                    VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style
                                            TargetType="{x:Type TextBlock}">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="Text" Value="{Binding CatalogTimestamp, StringFormat=g}" />
                                            <Style.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding CatalogTimestamp}"
                                                    Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="{StaticResource StopLight}" />
                                                    <Setter Property="Text" Value="Never" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DockPanel>
                        </Border>
                    </Border>
                    <Border
                        Margin="2"
                        BorderBrush="White"
                        BorderThickness="1,0,0,0"
                        DockPanel.Dock="Right">
                        <Border
                            BorderBrush="Black"
                            BorderThickness="1,0,0,0">
                            <DockPanel
                                Width="100"
                                Margin="5,0">
                                <TextBlock
                                    Width="30"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    Foreground="White"
                                    Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat='{}{0}%'}" />
                                <Slider
                                    x:Name="ZoomSlider"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    Maximum="200"
                                    Minimum="50"
                                    TickFrequency="5"
                                    Value="{Binding ZoomPercent}" />
                            </DockPanel>
                        </Border>
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{Binding LastStatus.Message}"
                        TextAlignment="Center"
                        TextWrapping="NoWrap">
                        <TextBlock.Style>
                            <Style
                                TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding LastStatus.IsError}"
                                        Value="false">
                                        <Setter Property="Foreground" Value="White" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding LastStatus.IsError}"
                                        Value="true">
                                        <Setter Property="Foreground" Value="OrangeRed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DockPanel>
            </Border>
            <DockPanel
                Margin="5"
                DockPanel.Dock="Left">
                <ItemsControl
                    Margin="5"
                    DockPanel.Dock="Bottom"
                    ItemsSource="{Binding ErrorsWhileBuildingCards}">
                    <ItemsControl.Style>
                        <Style
                            TargetType="{x:Type ItemsControl}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding ErrorsWhileBuildingCards.Count}"
                                    Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                Foreground="{StaticResource StopPop}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button
                    Command="{Binding BuildCards}"
                    CommandParameter="{Binding ElementName=SubmitTextBox, Path=Text}"
                    Content="Build"
                    DockPanel.Dock="Bottom" />
                <TextBox
                    x:Name="SubmitTextBox"
                    Width="200"
                    AcceptsReturn="True"
                    DockPanel.Dock="Left" />
            </DockPanel>
            <DockPanel
                Margin="5">
                <Button
                    Command="{Binding BuildCards}"
                    CommandParameter="{Binding ElementName=SubmitTextBox, Path=Text}"
                    Content="Build"
                    DockPanel.Dock="Bottom" />
                <Border
                    Background="White"
                    BorderBrush="DarkGray"
                    BorderThickness="1">
                    <ScrollViewer
                        Padding="10"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            ItemsSource="{Binding DisplayedCards}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </DockPanel>
        <Grid
            Visibility="{Binding Reporter.IsSystemBusy, Converter={x:Static resources:Converters.FalseToCollapsed}}">
            <Border
                Background="White"
                Opacity="0.5" />
            <Grid>
                <Grid.Resources>
                    <Color
                        x:Key="InnerColor">
                        #FFFFFFFF
                    </Color>
                    <GradientStopCollection
                        x:Key="Gradient">
                        <GradientStop Offset="1" Color="Transparent" />
                        <GradientStop Offset="0.2" Color="{DynamicResource InnerColor}" />
                    </GradientStopCollection>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition
                        Height="{Binding ElementName=BusyText, Path=ActualHeight}" />
                    <RowDefinition
                        Height="10" />
                    <RowDefinition
                        Height="{Binding ElementName=BusyText, Path=ActualHeight}" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle
                    Grid.Row="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush GradientStops="{DynamicResource Gradient}" MappingMode="RelativeToBoundingBox" StartPoint="0.5,1" EndPoint="0.5,0" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle
                    Grid.Row="3">
                    <Rectangle.Fill>
                        <LinearGradientBrush GradientStops="{DynamicResource Gradient}" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle
                    Grid.Row="2">
                    <Rectangle.Fill>
                        <SolidColorBrush
                            Color="{DynamicResource InnerColor}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
            <TextBlock
                x:Name="BusyText"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                Foreground="{StaticResource HighlightOrange}"
                Text="{Binding LastStatus.Message}" />
        </Grid>
    </Grid>
</Window>
